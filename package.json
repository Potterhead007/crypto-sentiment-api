{
  "name": "@sentiment-api/core",
  "version": "1.0.0",
  "description": "Institutional-Grade Cryptocurrency Market Sentiment Analysis API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cp -r src/database/migrations dist/database/",
    "postinstall": "npm run build",
    "dev": "ts-node-dev --respawn src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "ts-node src/database/migrator.ts migrate",
    "migrate:rollback": "ts-node src/database/migrator.ts rollback",
    "migrate:status": "ts-node src/database/migrator.ts status",
    "migrate:create": "ts-node src/database/migrator.ts create"
  },
  "keywords": [
    "cryptocurrency",
    "sentiment",
    "api",
    "institutional",
    "trading",
    "analytics"
  ],
  "author": "Sentiment API Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2"
  }
}

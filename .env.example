# =============================================================================
# Environment Variables - Crypto Sentiment API
# Copy this file to .env and fill in the values
# =============================================================================

# Database Configuration
DB_NAME=sentiment
DB_USER=sentiment
DB_PASSWORD=your-secure-database-password-here

# JWT Configuration (REQUIRED in production - min 32 characters)
JWT_SECRET=your-secure-jwt-secret-min-32-characters

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password-here

# Redis Configuration (optional in development)
REDIS_PASSWORD=

# =============================================================================
# Production-only variables (uncomment and set for production deployment)
# =============================================================================


# =============================================================================
# Environment Variables - Crypto Sentiment API
# Copy this file to .env and fill in the values
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sentiment
DB_USER=sentiment
DB_PASSWORD=your-secure-database-password-here
# DB_SSL=true  # Enable for production

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_TLS=true  # Enable for production

# =============================================================================
# Security Configuration (REQUIRED in production)
# =============================================================================
# JWT secret must be at least 32 characters
JWT_SECRET=your-secure-jwt-secret-min-32-characters

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Metrics endpoint protection (optional, for external Prometheus scrapers)
METRICS_ACCESS_TOKEN=

# =============================================================================
# Twitter/X API Configuration
# Get credentials from https://developer.twitter.com/
# =============================================================================
TWITTER_API_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Fallback Twitter data providers (optional, if official API quota exceeded)
# SocialData: https://socialdata.tools/
SOCIALDATA_API_KEY=
SOCIALDATA_BASE_URL=https://api.socialdata.tools

# TweetScout: https://tweetscout.io/
TWEETSCOUT_API_KEY=
TWEETSCOUT_BASE_URL=https://api.tweetscout.io

# Apify: https://apify.com/
APIFY_API_KEY=
APIFY_BASE_URL=https://api.apify.com

# =============================================================================
# Reddit API Configuration
# Get credentials from https://www.reddit.com/prefs/apps
# =============================================================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=crypto-sentiment-api/1.0

# =============================================================================
# News API Configuration
# =============================================================================
# CryptoPanic: https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_KEY=

# NewsAPI: https://newsapi.org/
NEWSAPI_KEY=

# =============================================================================
# On-Chain Data Configuration
# =============================================================================
# Etherscan: https://etherscan.io/apis
ETHERSCAN_API_KEY=

# BSCScan: https://bscscan.com/apis
BSCSCAN_API_KEY=

# PolygonScan: https://polygonscan.com/apis
POLYGONSCAN_API_KEY=

# Arbiscan: https://arbiscan.io/apis
ARBISCAN_API_KEY=

# Advanced on-chain analytics (optional)
# Glassnode: https://glassnode.com/
GLASSNODE_API_KEY=

# Nansen: https://nansen.ai/
NANSEN_API_KEY=

# Dune Analytics: https://dune.com/
DUNE_API_KEY=

# Alchemy: https://www.alchemy.com/
ALCHEMY_API_KEY=
ALCHEMY_NETWORK=eth-mainnet

# =============================================================================
# ML/AI Configuration
# =============================================================================
# HuggingFace Inference API: https://huggingface.co/settings/tokens
# Used for FinBERT and other sentiment models
HUGGINGFACE_API_KEY=

# Model to use (default: ProsusAI/finbert)
HUGGINGFACE_MODEL=ProsusAI/finbert

# =============================================================================
# Kafka Configuration (optional - for high-throughput deployments)
# =============================================================================
KAFKA_BROKERS=localhost:9092
# KAFKA_SSL=true  # Enable for production
# KAFKA_SASL_MECHANISM=scram-sha-512
# KAFKA_SASL_USERNAME=
# KAFKA_SASL_PASSWORD=

# =============================================================================
# Monitoring Configuration
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password-here

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# Production-only variables
# Uncomment and configure for production deployment
# =============================================================================
# NODE_ENV=production
# DB_SSL=true
# REDIS_TLS=true
# KAFKA_SSL=true
